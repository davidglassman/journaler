{
  "name": "journaler",
  "appName": "Journaler",
  "description": "A minimalist daily writing app",
  "version": "1.0.0",
  "author": "David Glassman",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.20.0"
  },
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "dev": "vite",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "vue-tsc --build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "pnpm format:check && pnpm lint && pnpm typecheck && vite build",
    "build": "vite build && electron-builder --publish never",
    "build:full": "pnpm check && pnpm build",
    "build:icon": "./build/resources/scripts/build-icon.sh"
  },
  "dependencies": {
    "@internationalized/date": "^3.10.0",
    "@tiptap/core": "^3.10.4",
    "@tiptap/extension-list": "^3.10.4",
    "@tiptap/extension-text-style": "^3.10.4",
    "@tiptap/pm": "^3.10.4",
    "@tiptap/starter-kit": "^3.10.4",
    "@tiptap/vue-3": "^3.10.4",
    "@vueuse/core": "^14.0.0",
    "archiver": "^7.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "geist": "^1.5.1",
    "lucide-vue-next": "^0.553.0",
    "pinia": "^3.0.4",
    "reka-ui": "^2.6.0",
    "tailwind-merge": "^3.4.0",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "vue": "^3.5.22",
    "vue-sonner": "^2.0.9"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@eslint/js": "^9.39.1",
    "@iconify/json": "^2.2.404",
    "@tailwindcss/vite": "^4.1.16",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/archiver": "^7.0.0",
    "@types/node": "^24.10.0",
    "@vitejs/plugin-vue": "latest",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "electron": "^39.1.0",
    "electron-builder": "24.13.3",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "unplugin-icons": "^22.5.0",
    "vite": "^7.2.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vue-tsc": "^3.1.3"
  },
  "main": "build/compiled/electron/main.js",
  "build": {
    "appId": "com.davidglassman.journaler",
    "productName": "Journaler",
    "asar": true,
    "afterSign": "build/resources/scripts/notarize.js",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "build/compiled/renderer",
      "build/compiled/electron",
      "build/resources/icons"
    ],
    "mac": {
      "notarize": false,
      "icon": "build/resources/icons/mac/icon.icns",
      "artifactName": "${productName}-${version}.${ext}",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/resources/entitlements.mac.plist",
      "entitlementsInherit": "build/resources/entitlements.mac.plist",
      "x64ArchFiles": "*"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/resources/icons/windows/icon.ico",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/resources/icons/linux",
      "artifactName": "${productName}-${version}.${ext}",
      "category": "Office"
    }
  }
}
